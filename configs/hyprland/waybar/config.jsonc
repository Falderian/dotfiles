{
  "layer": "top",
  "modules-left": ["custom/appmenu", "battery", "hyprland/workspaces", "mpris"],
  "modules-center": ["hyprland/window"],
  "modules-right": [
    "network",
    "memory",
    "temperature",
    "pulseaudio",
    "bluetooth",
    "tray",
    "hyprland/language",
    "clock",
    "custom/notification"
  ],
  "hyprland/workspaces": {
    "disable-scroll": false,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "urgent": "ÔÅ±", // JetBrains Nerd: exclamation triangle (was ÔÅ™)
      "focused": "ÔÑë" // JetBrains Nerd: solid circle (was ÔÜí)
    }
  },
  "hyprland/window": {
    "max-length": 50
  },
  "temperature": {
    "thermal-zone": 2,
    "hwmon-path": ["/sys/class/hwmon/hwmon4/temp1_input"],
    "critical-threshold": 80,
    "format-critical": "{temperatureC}¬∞C Ôãá",
    "format": "{temperatureC}¬∞C Ôãâ"
  },
  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "Û±Ö´", // Bell + circle
      "none": "Û∞Çö",
      "dnd-notification": "Û∞ÇõN", // Moon + circle
      "dnd-none": "Û∞Çõ",
      "inhibited-notification": "ÔÉ≥<span foreground='red'><sup>ÔÑë</sup></span>",
      "inhibited-none": "ÔÉ≥",
      "dnd-inhibited-notification": "Û∞Çõ",
      "dnd-inhibited-none": "Û∞Çõ"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
  "custom/appmenu": {
    "format": "Û∞£á",
    "tooltip-format": "Applications",
    "on-click": "~/.config/hypr/scripts/appLauncher.sh",
    "tooltip": true
  },
  "tray": {
    "spacing": 10
  },
  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format": "{:%H:%M}",
    "format-alt": "{:%A, %B %d, %Y}  ÔÅ≥" // Calendar icon (was Û∞É≠)
  },
  "memory": {
    "format": "{:>3}% ÓøÖ", // RAM chip icon (was Ôãõ)
    "on-click": "foot -e btop"
  },
  "network": {
    "format-disabled": "ÔÅ± –û—Ç–∫–ª—é—á—ë–Ω",
    "format-wifi": "{bandwidthDownBits:>} Ôá´", // Wi-Fi icon (was Û∞∂°)
    "tooltip-format-wifi": "{essid}",
    "format-ethernet": "{bandwidthDownBits:>} ÔÖâ", // Ethernet icon (was Û∞∂°)
    "tooltip-format-ethernet": "{ifname}: {ipaddr}/{cidr}",
    "format-disconnected": "ÔÅ± –ù–µ—Ç —Å–µ—Ç–∏",
    "on-click": "foot -e iwctl",
    "interval": 2
  },
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-muted": "Muted Û∞∏à",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "Ôäî",
      "headset": "Û∞ãé",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    },
    "scroll-step": 5,
    "on-click": "foot -e pulsemixer",
    "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%",
    "tooltip-format": "{desc} ‚Ä¢ {volume}%"
  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-charging": "{capacity}% Ôá¶", // Plug icon
    "format-plugged": "{capacity}% Ôá¶",
    "format-alt": "{icon} {time}",
    "format-full": "{capacity}% ÔâÄ", // Battery full
    "format-icons": [
      "ÔâÑ", // Battery 0-20%
      "ÔâÉ", // Battery 20-40%
      "ÔâÇ" // Battery 40-60%
    ],
    "on-scroll-up": "brightnessctl set +5%",
    "on-scroll-down": "brightnessctl set 5%-"
  },
  "mpris": {
    "player": "playerctld", // Assumed for active player tracking
    "format": "{player_icon} {artist} - {title}", // Updated to use dynamic icon
    "player-icons": {
      "spotify": "ÔÜº", // Spotify icon (Nerd Font)
      "firefox": "Û∞àπ", // Firefox icon
      "telegram-desktop": "ÔãÜ", // Telegram icon
      "default": "üéµ" // Fallback for other players
    },
    "tooltip-format": "{player}: {status}", // Updated for clarity (shows player name and status)
    "on-click": "playerctl play-pause", // Your original: Play/pause active player
    "on-click-right": "playerctl next", // Your original: Next track
    "on-click-middle": "playerctl previous", // Added: Previous track (playback control)
    "on-scroll-up": "playerctld shift", // Added: Next player (player switching)
    "on-scroll-down": "playerctld unshift", // Added: Previous player (player switching)
    "max-length": 40,
    "hide-on-empty": true
  },
  "hyprland/language": {
    "format": "{}",
    "format-en": "us",
    "format-ru": "ru",
    "tooltip": true
  },
  "bluetooth": {
    "controller": "controller1",
    "format": "Û∞ÇØ {status}",
    "format-on": "Û∞ÇØ",
    "format-off": "Û∞Ç≤",
    "format-disabled": "",
    "format-connected": "Û∞Ç± {num_connections}",
    "tooltip-format-connected": "{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "on-click": "foot -e bluetuith"
  }
}
